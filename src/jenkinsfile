pipeline {
 agent any
     stages{
         stage('download source code'){
             steps{
              echo 'download source...'
              git branch: 'main', git url: 'https://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@github.com/JPLEAL79/selenium-cucumber-Junit.git'
             }
         }

         stage('Clean'){
             steps{
             echo 'clean project...'
             sh 'mvn -f pom.xml clean'

             }
         }

         stage('Functional testing'){
             steps{
             echo 'Running functional tests...'
             sh 'mvn -f pom.xml test'
           }
        }
     }
 }